---
/**
 * PageLayout - Layout for general pages, wraps content with header, footer, and global styles
 * @props {children: any} - Page content
 * @behavior Provides consistent structure, navigation, and global styles for non-markdown pages
 * @dependencies CustomStyles.astro, Favicons.astro, Header, Footer
 * @usedBy All non-markdown pages (e.g., about, contact, services)
 */

import Layout from '~/layouts/Layout.astro';
import Header from '~/components/core/layout/Header.astro';
import Footer from '~/components/core/layout/Footer.astro';
import UrlDebug from '~/components/debug/UrlDebug.astro';
import { getHeaderData, getFooterData } from '~/navigation';
import type { MetaData } from '~/types';
import { detectLanguage } from '~/utils/i18n';

export interface Props {
  metadata?: MetaData;
}

const { metadata } = Astro.props;
const locale = detectLanguage(Astro.url.pathname);
const headerData = getHeaderData(locale);
const footerData = getFooterData(locale);
---

<Layout metadata={metadata}>
  <UrlDebug locale={locale} />
  <slot name="header">
    <!-- Only render default header if slot not provided -->
    <Header {...headerData} locale={locale} isSticky showRssFeed showToggleTheme />
  </slot>
  <main>
    <slot />
  </main>
  <slot name="footer">
    <Footer {...footerData} locale={locale} />
  </slot>
</Layout>
