---
/**
 * List - Renders a list of blog posts or content items with optional pagination
 * @props {items: Array, paginated?: boolean} - Content items and pagination toggle
 * @behavior Displays items in a vertical list, supports pagination and responsive design
 * @dependencies Tailwind CSS, Pagination.astro
 * @usedBy Blog index, RelatedPosts.astro
 */

import Item from '~/components/content/blog/ListItem.astro';
import type { Post } from '~/types';

export interface Props {
  posts: Array<Post>;
}

const { posts } = Astro.props;
---

<ul>
  {
    posts.map((post) => (
      <li class="mb-12 md:mb-20">
        <Item post={post} />
      </li>
    ))
  }
</ul>
