---
/**
 * Grid - Displays a responsive grid of blog posts or content items
 * @props {items: Array, columns?: number} - Content items and optional column count
 * @behavior Renders a grid layout, adapts to screen size, supports dark mode
 * @dependencies Tailwind CSS
 * @usedBy Blog index, List.astro, RelatedPosts.astro
 */

import Item from '~/components/content/blog/GridItem.astro';
import type { Post } from '~/types';

export interface Props {
  posts: Array<Post>;
}

const { posts } = Astro.props;
---

<div class="grid gap-6 row-gap-5 md:grid-cols-2 lg:grid-cols-4 -mb-6">
  {posts.map((post) => <Item post={post} />)}
</div>
