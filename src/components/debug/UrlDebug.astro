---
/**
 * Debug component to check getLocalizedUrl behavior
 */
import { getLocalizedUrl } from '../../utils/i18n';
import type { SupportedLanguage } from '../../utils/i18n';

export interface Props {
  locale: SupportedLanguage;
}

const { locale } = Astro.props;

const debugUrls = {
  rootEn: getLocalizedUrl('/', 'en'),
  rootDe: getLocalizedUrl('/', 'de'),
  rootLocale: getLocalizedUrl('/', locale),
  booksEn: getLocalizedUrl('/books', 'en'),
  projectsEn: getLocalizedUrl('/projects', 'en'),
};
---

<!-- Debug info (only shows in development) -->{
  import.meta.env.DEV && (
    <div style="position: fixed; top: 10px; right: 10px; background: black; color: white; padding: 10px; font-size: 12px; z-index: 9999; font-family: monospace;">
      <>
        <strong>Debug URLs:</strong>
        <br />
      </>
      getLocalizedUrl('/', 'en'): {debugUrls.rootEn}
      <br />
      getLocalizedUrl('/', 'de'): {debugUrls.rootDe}
      <br />
      getLocalizedUrl('/', locale): {debugUrls.rootLocale}
      <br />
      Logo should link to: {debugUrls.rootLocale}
    </div>
  )
}
