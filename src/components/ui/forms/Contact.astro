---
/**
 * Contact - Contact form widget with headline and customizable form fields
 * @props {title?: string, subtitle?: string, tagline?: string, inputs?: Array, textarea?: object, disclaimer?: string, button?: string, description?: string, id?: string, isDark?: boolean, classes?: object, bg?: string} - Contact form configuration and content
 * @behavior Renders contact section with headline and form, supports custom fields, validation, and styling
 * @dependencies FormContainer.astro (Form.astro), Headline.astro, WidgetWrapper.astro, Tailwind CSS
 * @usedBy Contact page, footer contact sections, lead generation forms
 */
import FormContainer from '~/components/ui/forms/Form.astro';
import Headline from '~/components/ui/display/Headline.astro';
import WidgetWrapper from '~/components/ui/layout/WidgetWrapper.astro';
import type { Contact as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  inputs,
  textarea,
  disclaimer,
  button,
  description,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  {
    inputs && (
      <div class="flex flex-col max-w-xl mx-auto rounded-lg backdrop-blur border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 shadow p-4 sm:p-6 lg:p-8 w-full">
        <FormContainer
          inputs={inputs}
          textarea={textarea}
          disclaimer={disclaimer}
          button={button}
          description={description}
        />
      </div>
    )
  }
</WidgetWrapper>
