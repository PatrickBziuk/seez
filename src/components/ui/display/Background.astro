---
/**
 * Background - Provides a styled background wrapper for sections and content
 * @props {variant?: string, color?: string} - Background style variant and color options
 * @behavior Applies background styling, supports light/dark modes and gradients
 * @dependencies Tailwind CSS
 * @usedBy Widget components, section layouts, hero sections
 */
export interface Props {
  isDark?: boolean;
}

const { isDark = false } = Astro.props;
---

<div class:list={['absolute inset-0', { 'bg-dark dark:bg-transparent': isDark }]}>
  <slot />
</div>
