---
import Layout from '~/layouts/Layout.astro';
import { detectLanguage } from '~/utils/i18n';

const title = `Error 404`;

// Detect language from URL for proper homepage link
const currentLanguage = detectLanguage(Astro.url.pathname);
const homepageUrl = `/${currentLanguage}`;
---

<Layout metadata={{ title }}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-9xl">
          <span class="sr-only">Error</span>
          <span class="text-primary">404</span>
        </h2>
        <p class="text-3xl font-semibold md:text-3xl">Sorry, here's nothing except a cool background.</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">
          Oh it seems, it's not here. Maybe later on something cool will be here.
        </p>
        <a rel="noopener noreferrer" href={homepageUrl} class="btn ml-4">Back to homepage</a>
      </div>
    </div>
  </section>
</Layout>
