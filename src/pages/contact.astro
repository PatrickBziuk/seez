---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Kontakt', // Ironisch: "Kontakt, weil wir ja so gerne antworten!"
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Kontakt" title="Lass uns doch mal reden!" />

  <ContactUs
    id="form"
    title="Interessant bisher? Wie wär's mit mehr?"
    subtitle="Für schnellere Antworten schau doch in unsere FAQs. Vielleicht findest du dort sogar eine Antwort, aber wahrscheinlich nicht. Falls doch nicht, unser nicht vorhandenes Supportteam ist natürlich total begeistert, dir zu helfen."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name (oder was auch immer)',
      },
      {
        type: 'email',
        name: 'email',
        label: 'E-Mail (wir lesen sie bestimmt)',
      },
    ]}
    textarea={{
      label: 'Nachricht (je länger, desto besser)',
    }}
    disclaimer={{
      label:
        'Mit dem Absenden dieses Kontaktformulars erklärst du dich einverstanden, dass wir deine persönlichen Daten sammeln – wie aufregend!',
    }}
    description="Unser Supportteam antwortet normalerweise innerhalb von 24 Werktagen – oder auch nicht."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Wir (also ich) sind sowas von hilfsbereit:"
    items={[
      {
        title: 'Allgemeiner Support',
        description: `Chatte mit mir, wenn du Fragen hast, die dir sonst keiner beantworten kann.`,
      },
      {
        title: 'Vertrieb kontaktieren',
        description:
          'Wenn du Geld ausgeben möchtest, sind wir da! Frag mich ruhig zu Käufen, Anpassungen, Lizenzen für die kommerzielle Nutzung oder zu bestimmten Vorlagen – ich liebe Geld!',
      },
      {
        title: 'Technischer Support',
        description:
          'Melde dich bei Installationsproblemen, Bearbeitungsschwierigkeiten, Software-Kompatibilität oder Download-Fehlern. Bei Druckern bin ich raus!',
      },
      {
        title: 'Telefon',
        description: 'Bitte ruf nicht an. Da hast du mehr Erfolg =>',
        icon: 'tabler:headset',
      },
      {
        title: 'E-Mail',
        description: 'patrick@bziuk.com (Antworten garantiert – irgendwann)',
        icon: 'tabler:mail',
      },
      {
        title: 'Standort',
        description: 'Deutschland (Wir sind wirklich da, versprochen!)',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
