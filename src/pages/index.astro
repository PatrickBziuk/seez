---
// Server-side redirect fallback for root access
// The middleware should handle this, but this provides an additional fallback

export async function GET() {
  // Fallback redirect to English if middleware didn't catch it
  return new Response(null, {
    status: 302,
    headers: {
      Location: '/en',
    },
  });
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Redirecting...</title>
    <meta http-equiv="refresh" content="0; url=/en" />
    <link rel="canonical" href="https://seez.eu/en" />
  </head>
  <body>
    <p>If you are not redirected automatically, <a href="/en">click here</a>.</p>
    <script>
      window.location.href = '/en';
    </script>
  </body>
</html>
